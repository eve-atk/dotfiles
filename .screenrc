# shell
shell $SHELL

# escape
escape ^Qq

# screen code
defutf8 on
defencoding utf8
encoding utf8 utf8

# 邪魔なやつ
startup_message off
vbell off

# buffer消す
altscreen on

# color
attrcolor b ".I"
defbce on
termcapinfo xterm* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# status line
hardstatus alwayslastline "%{= cd} %-w%{= dd} %n %t* %{-}%+w %= LoadAVG [%l] "
